<idea-plugin>
    <id>cx.eri.gutter-coverage-display</id>
    <name>Gutter Coverage Display</name>
    <version>1.0.0</version>
    <vendor email="admin@eri.cx" url="https://eri.cx">Eric2369</vendor>

    <description>
        A simple IntelliJ IDEA plugin to display a message.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="cx.eri.gutter-coverage-display.ShowMessageAction"
                class="cx.eri.guttercoveragedisplay.ShowMessageAction" text="Show Message">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>